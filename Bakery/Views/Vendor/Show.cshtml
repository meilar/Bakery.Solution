@{
  Layout = "_Layout";
}
@using Bakery.Models;
  <div class="container">
  @await Html.PartialAsync("_Navbar")
  <h1> Vendor Orders: @Model.Name<h1>
  <h3 class="text-danger">Outstanding Balance: $@Model.Balance.00</h3>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Order #</th>
        <th scope="col">Description</th>
        <th scope="col">Notes</th>
        <th scope="col">Payment Due</th>
        <th scope="col">Order Amount</th>
      </tr>
    </thead>
    <tbody>
      @foreach (Order element in @Model.Orders)
      {
      <tr>
        <th scope="row">@element.Id</th>
        <td>@element.Description</td>
        <td>@element.Notes</td>
        <td>@element.Due</td>
        <td>$@element.Amount.00
      </tr>
      }
    </tbody>
  </table>
  @await Html.PartialAsync("_Footer")
  </div>